{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    ".idea",
    ".vscode"
  ]
}
